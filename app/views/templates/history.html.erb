template#history
<table>
  <tr>
    <td>样品名称</td>
    <td>样品编码</td>
    <td>检测项目</td>
  </tr>
  <% Sample.all.each do |sample| %>
    <tr>
      <td><%= sample.name %></td>
      <td><%= sample.code %></td>
    </tr>
     <% sample.templates.each do |template| %>
      <tr>
        <td><%= template.item.name %>
          <%# template.template_values.values.present? %>
            <%= template.template_values.values.each do |value| %>
              <%= value %>
            <% end %>
          <% end %>
        </td>
      </tr>
  <% end %>


</table>
